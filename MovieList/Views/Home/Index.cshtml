@model List<Movie>
@{
    ViewBag.Title = "My Movies";
}

<h2>Movie List</h2>

<a asp-controller="Movie" asp-action="Add">Add New Movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>                                          @* Added Genre th*@
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre.Name</td>                          @* Added @movie.Genre.Name*@
                <td>@movie.Rating</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit"
                       asp-route-id="@movie.MovieId"
                       asp-route-slug="@movie.Slug">Edit</a>                 @* Added @movie.Slug*@
                    <a asp-controller="Movie" asp-action="Delete"
                       asp-route-id="@movie.MovieId"
                       asp-route-slug="@movie.Slug">Delete</a>              @* Added @movie.Slug*@
                </td>
            </tr>
        }
    </tbody>
</table>